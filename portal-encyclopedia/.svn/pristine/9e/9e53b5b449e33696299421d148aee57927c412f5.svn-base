<#assign ctxPath=request.contextPath>
<#global webRoot="${ctxPath!}/"> 

<!-- 行业资讯的路径 -->
<#global information ="http://zixun.99114.com/"> 
<#-- 静态工程地址 -->
<#global commonStaticUrl="http://static.99114.com">

<#global staticRoot="${ctxPath!}/static"> 
<#global templateRoot="${ctxPath!}/template"> 
<#--头部集成路径-->
<#global portalTopUrl="${siteDetail.portalTopUrl!}">
<#--底部集成路径-->
<#global portalFooterUrl="${siteDetail.portalFooterUrl!}">

<#--登录路径-->
<#if siteDetail.id?exists>
	<#global loginUrl="http://www.99114.com/login/toIndex?siteId=${siteDetail.id!}&">
<#else>
	<#global loginUrl="http://www.99114.com/login/toIndex?siteId=1&">
</#if>
<#--注册路径-->
<#if siteDetail.id?exists>
	<#global registerUrl="http://member.99114.com/login/gotoRegister?siteId=${siteDetail.id!}&backUrl=http://www.99114.com">
<#else>
	<#global registerUrl="http://member.99114.com/login/gotoRegister?siteId=1&backUrl=http://www.99114.com">
</#if>
<#--广告-->
<#assign ad=JspTaglibs["/WEB-INF/tags/adverties.tld"]>
<script type="text/javascript" src="${commonStaticUrl}/static/portal/js/jquery-1.8.0.min.js"></script>
<script type="text/javascript" src="${templateRoot}/js/global.js"></script>
<link type="text/css" href="${templateRoot}/css/base.css" rel="stylesheet" />
<script type="text/javascript" src="${templateRoot}/js/search.js"></script>
